<% layout('layouts/boilerplate') -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username: </label>
                    <input class="form-control" type="text" name="username" placeholder="choose your username" id="username" required>
                    <div class="invalid-feedback"> Looks Good! </div>
                </div>
                <!-- email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email: </label>
                    <input class="form-control" type="email" name="email" placeholder="enter your email" id="email" required>
                </div>
                <!-- password -->
                 <div class="mb-3">
                    <label for="password" class="form-label">Password: </label>
                    <input class="form-control" type="password" name="password" placeholder="enter your password" id="password" required>
                </div>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>