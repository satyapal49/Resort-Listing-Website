<% layout('layouts/boilerplate') -%>

<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create Your New Listing</h3>
    <form action="/listings" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title: </label>
             <input class="form-control" type="text" name="listing[title]" placeholder="Title">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description: </label>
            <textarea class="form-control" name="listing[description]" id="description" placeholder="Description"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image: </label>
            <input class="form-control"id="image" type="text" name="listing[image]" placeholder="Image URL">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price: </label>
             <input class="form-control" id="price" type="number" name="listing[price]" placeholder="&#8377 1299">
        </div>
        <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country: </label>
             <input class="form-control" id="country" type="text" name="listing[country]" placeholder="India">
        </div>
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location: </label>
            <input class="form-control" id="location" type="text" name="listing[location]" placeholder="Jaipur, Delhi">
        </div>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" required="required">
            <label class="form-check-label" for="exampleCheck1" >Check me out</label>
        </div>
        <button class="btn btn-dark mt-3">Create Listing</button>
    </form>
    </div>
    </div>
</body>
</html>